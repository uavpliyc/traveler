<!DOCTYPE html>
<html>

<head>
  <title>Traveler</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if user_signed_in? %>
  <header>
    <div><%= link_to root_path do %><img src="/assets/header.png" alt="logo" id="logo"><% end %></div>
    <div><%= link_to "トップ", root_path, class: "text-white" %></div>
    <div><%= link_to "投稿する", new_post_path, class: "text-white" %></div>
    <div><%= link_to "投稿一覧", posts_path, class: "text-white" %></div>
    <div><%= link_to "マイページ", user_path(current_user), class: "text-white" %></div>
    <div><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-white" %></div>
  </header>
  <% end %>
  <%= yield %>
</body>

</html>