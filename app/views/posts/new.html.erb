<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">旅行新規投稿</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @post, url:'/posts', local:true do |f| %>
      <div class="form-group">
        <label class="form-label">旅行先</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">感想</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">画像</label><br>
        <%= f.attachment_field :image %>
      </div>
      <%= f.submit '投稿する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>